<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@color/black">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_me_photo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_laucher"
                    app:civ_border_color="@android:color/white"
                    app:civ_border_width="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_87"
                        android:text="@string/app_name"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/tv_app_version"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/AppVersion"
                        android:textColor="@color/white_60" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/black"
                android:layout_marginTop="50dp">

                <LinearLayout
                    android:id="@+id/ll_know_more"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:background="#0DFFFFFF"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="了解更多"
                        android:textColor="@android:color/white"
                        android:alpha="0.6"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_right_arrow"
                        android:alpha="0.6"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_app_intro"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#0DFFFFFF"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="功能介绍"
                        android:textColor="@android:color/white"
                        android:alpha="0.6"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_right_arrow"
                        android:alpha="0.6"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_advice_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#0DFFFFFF"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="意见反馈"
                        android:textColor="@android:color/white"
                        android:alpha="0.6"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_right_arrow"
                        android:alpha="0.6"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_version_update"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#0DFFFFFF"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_new_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="48dp"
                        android:text="新版本"
                        android:textColor="@color/purple_200"
                        android:textSize="8sp"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="版本更新"
                        android:textColor="@android:color/white"
                        android:alpha="0.6"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_right_arrow"
                        android:alpha="0.6"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>