<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white_00</item>
        <item name="actionBarStyle">@style/ActionBarTitle</item>
    </style>

    <!--Login Activity -->
    <style name="ThemeLogin" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/white_00</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!--Full Guide -->
    <style name="GuideThemeFull" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ActionBarTitle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/purple_200</item>
    </style>

    <!--Full Style Activity -->
    <style name="AppThemeFull" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>